{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WebX Exec Batch",
  "type": "object",
  "required": ["guards", "actions"],
  "properties": {
    "guards": {
      "type": "object",
      "properties": {
        "allowHosts": { "type": "array", "items": { "type": "string" } },
        "risk": { "type": "array", "items": { "type": "string" } },
        "maxRetriesPerStep": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": true
    },
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "id": { "type": ["string", "number"] },
          "type": { "type": "string" },
          "url": { "type": "string" },
          "text": { "type": "string" },
          "label": { "type": "string" },
          "role": { "type": "string" },
          "selector": { "type": "string" },
          "timeoutMs": { "type": "integer", "minimum": 0 },
          "frame": {
            "type": "object",
            "properties": {
              "selector": { "type": "string" },
              "index": { "type": "integer", "minimum": 0 }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": true
      }
    },
    "evidence": {
      "type": "object",
      "properties": {
        "screenshotEach": { "type": "boolean" },
        "domSchemaEach": { "type": "boolean" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}

