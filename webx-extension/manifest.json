{
  "manifest_version": 3,
  "name": "Desktop Agent WebX",
  "version": "1.0.0",
  "description": "Native messaging bridge for Desktop Agent web automation",
  
  "permissions": [
    "nativeMessaging",
    "activeTab", 
    "scripting",
    "storage",
    "downloads"
  ],
  
  "optional_permissions": [
    "debugger"
  ],
  
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["rpc.js"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://localhost:*/*"
    ]
  },
  
  "minimum_chrome_version": "88"
}