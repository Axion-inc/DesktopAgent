{
  "manifest_version": 3,
  "name": "Desktop Agent WebX CDP",
  "version": "2.0.0",
  "description": "Chrome DevTools Protocol-based web automation for Desktop Agent",
  
  "permissions": [
    "activeTab",
    "scripting", 
    "storage",
    "downloads",
    "debugger",
    "cookies",
    "nativeMessaging"
  ],
  
  "optional_permissions": [
    "tabs"
  ],
  
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "cdp-manager.js",
        "dom-builder.js", 
        "overlay-manager.js",
        "rpc.js",
        "plugins/*.js",
        "sdk/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://localhost:*/*"
    ]
  },
  
  "minimum_chrome_version": "88"
}
